.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  height: 100vh;
  background-color: #ffffff;
}

.login-header {
  margin-top: 120rpx;
  margin-bottom: 160rpx;
  text-align: center;
}

.login-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.login-button-container {
  width: 100%;
  margin-bottom: 40rpx;
}

.phone-login-button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #ff5f5f;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 48rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.skip-login {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  margin-top: 40rpx;
}

.agreement {
  position: absolute;
  bottom: 80rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.agreement checkbox {
  transform: scale(0.7);
  margin-right: 4rpx;
}

.agreement-link {
  color: #ff5f5f;
}