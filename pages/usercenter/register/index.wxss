.register-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.avatar-section {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.avatar-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.default-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-bottom: 30rpx;
}

.auth-avatar-btn {
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #ffffff;
  border: 1px solid #dddddd;
  border-radius: 35rpx;
  padding: 0;
}

.form-section {
  width: 100%;
  margin-bottom: 40rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.form-item {
  padding: 30rpx;
}

.form-divider {
  height: 1rpx;
  background-color: #eeeeee;
  margin: 0 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.required::before {
  content: '*';
  color: #fa4126;
  margin-right: 4rpx;
}

.form-input {
  width: 200px;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 0;
  font-size: 28rpx;
  text-align: right;
  box-sizing: border-box;
  padding: 0;
}

.placeholder {
  color: #bbbbbb;
  text-align: right;
}

.button-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 48rpx;
  padding: 0 30rpx;
  z-index: 9;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fa4126;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 45rpx;
  text-align: center;
}

/* TDesign Cell覆盖样式 */
.t-cell {
  padding: 20rpx !important;
  align-items: center !important;
}

.t-cell__title-text {
  color: #333333 !important;
  font-size: 28rpx !important;
}

.t-cell__note {
  flex: 1;
  text-align: right;
  padding: 0%;
} 