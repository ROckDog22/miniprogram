/* components/login-prompt/index.wxss */
.login-prompt-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100%;
  background-color: #ffffff;
}

.login-prompt-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  width: 100%;
  max-width: 650rpx;
}

.login-illustration {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.login-bg-image {
  width: 450rpx;
  height: 300rpx;
}

.login-text-overlay {
  margin-top: 20rpx;
  text-align: center;
}

.prompt-text {
  font-size: 36rpx;
  color: #666666;
  font-weight: 400;
}

.button-container {
  width: 100%;
}

.login-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #ff5f5f;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 45rpx;
  text-align: center;
  border: none;
}

.login-button::after {
  border: none;
} 